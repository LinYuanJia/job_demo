/* components/detail/job_detail.wxss */
page {
  background-color: #f4f3f8;
}
.clearfix::before,.clearfix::after {
  display: table;
  content: "";
}
.clearfix::after {
  clear: both;
}
.detail_header {
  box-sizing: border-box;
  width: 100%;
  height: 351rpx;
  background-color: #ffffff;
  margin: 5rpx auto; 
  padding: 19rpx 30rpx 0 30rpx;
}
.job_header {
  position: relative;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}
.job_header .job_salary {
  color: #52cac1;
}
.job_body {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx; 
}
.job_footer {
  width: 100%;
  margin-bottom: 28rpx;
}
.job_footer text {
  display: block;
  float: left;
  width: 120rpx;
  height: 50rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
  background-color: #fcf9db;
  color: #9e9e12;
  text-align: center;
  line-height: 50rpx;
  border-radius: 6rpx;
}
.job_footer .wuxian {
  background-color: #77d5ce;
  color: #0c9d9d;
}
.job_footer .nianzhong {
  background-color: #e3f4ff;
  color: #5db3ac;
}
.job_footer .jiaban {
  background-color: #d8b38a;
  color: #fcf9f6;
}
.job_star {
  position: absolute;
  top:200rpx;
  right: 30rpx;
  display: flex;
  width: 249rpx;
  flex-wrap: wrap;
  text-align: center;
}
.job_star .solid-star {
  width: 124rpx;
  color: #52cac1;
}
.job_star .icon-solid-star {
  font-size: 50rpx;
}
.job_star .hongbao {
  width: 100rpx;
  color: #d81e06;
}
.job_star .icon-hongbao {
  font-size: 50rpx; 
}
.job_star > .collect,.share {
  width: 124rpx;
  font-size: 24rpx;
}
.collect {
  color: #52cac1;
}
.share {
  color: #d81e06;
}
.tel_titel {
  position: absolute;
  top: 290rpx;
  left: 31rpx;
  display: flex;
  align-items: center;
  height: 53rpx;
  font-size: 28rpx;
  color: #333333;
}
.tel_img {
  width: 8rpx;
  height: 53rpx;
  margin-right: 20rpx;
}
.detail_tel {
  position: relative;
  width: 100%;
  height: 177rpx;
  background-color: #ffffff;
}
.detail_tel > image {
  position: absolute;
  top: 30rpx;
  right: 60rpx;
  width: 52rpx;
  height: 51rpx;
}
.tel_lianxiren,.tel_dianhua {
  display: flex;
  align-items: center;
  margin: 10rpx 0 20rpx 60rpx;
  font-size: 24rpx;
  color: #6d6d6d;
}
.detail_tel .lianxiren {
  width: 40rpx;
  height: 38rpx;
  margin-right: 40rpx;
}
.detail_tel .dianhua {
  width: 34rpx;
  height: 34rpx;
   margin-right: 40rpx;
}
.job_title {
  position: absolute;
  top: 130rpx;
  left: 31rpx;
  display: flex;
  align-items: center;
  height: 53rpx;
  font-size: 28rpx;
  color: #333333;
}
.detail_job {
  margin-top: 5rpx;
  background-color: #ffffff;
  font-size: 24rpx;
  color: #666666;
  padding: 30rpx 52rpx 30rpx;
}
.bottom_button {
  position: fixed;
  top: 1100rpx;
  left: 30rpx;
  width: 100%;
}
.bottom_button .gouton {
  width: 250rpx;
  height: 80rpx;
  background-color: #6cb2f8;
  border-radius: 10rpx;
  color: #ffffff;
  line-height: 80rpx;
  font-size: 36rpx;
}
.bottom_button .shenqing {
  width: 407rpx;
  height: 80rpx;
  background-color: #52cac1;
  border-radius: 10rpx;
  color: #ffffff;
  margin-left: 30rpx;
  line-height: 80rpx;
  font-size: 36rpx;
}

@font-face {
    font-family: 'iconfont';
    src: url(data:application/font-woff2;charset=utf-8;base64,) format('woff2'),
        url(data:application/font-woff;charset=utf-8;base64,) format('woff'),
        url('iconfont.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-hongbao:before {
  content: "\e66c";
}

.xiala_arrow:before {
  content: "\e658";
}

.icon-gougou:before {
  content: "\e665";
}

.icon-solid-star:before {
  content: "\e60b";
}

