/* pages/tixian_qianbao/tixian_qianbao.wxss */
page {
  background-color: #f4f3f8;
}
.tixian {
  box-sizing: border-box;
  margin: 30rpx auto;
  padding: 40rpx;
  width: 690rpx;
  height: 362rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx #cec9c9;
}
.tixian .t_a, .tixian .t_b {
  font-size: 28rpx;
  color: #999999;
}
.tixian .t_b {
  font-size: 22rpx;
  margin-left: 60rpx;
}
.tixian input {
  display: block;
  margin: 40rpx auto;
  width: 100%;
  height: 130rpx;
  font-size: 70rpx;
  color: #000000;
  border-bottom: 1rpx solid #ebebf2;
}
.tixian .t_c, .tixian .t_d {
  font-size: 28rpx;
  color: #686868;
}
.tixian .t_d {
  margin-left: 200rpx;
  color: #5dcdc5;
  font-weight: bold;
}
button {
  width: 690rpx;
  height: 80rpx;
  background-color: #52cac1;
  color: #ffffff;
  line-height: 80rpx;
  margin-top: 100rpx;
  font-size: 32rpx;
}