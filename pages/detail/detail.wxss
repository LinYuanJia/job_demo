/* pages/detail/detail.wxss */
.apply {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
}
.apply_bg {
  width: 100%;
  height: 1206rpx;
  background-color: #000000;
  opacity: 0.5;
}
.apply_ziliao {
  position: absolute;
  top: 257rpx;
  left: 30rpx;
  box-sizing: border-box;
  width: 690rpx;
  height: 547rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 31rpx 0 31rpx;
  text-align: center;
}
.apply_ziliao .name, .apply_ziliao .gender, .apply_ziliao .tel {
  display: flex;
  justify-content: space-between;
  padding: 28rpx 0; 
  border-bottom: 2rpx solid #cdcdcd;
  font-size: 32rpx;
  color: #666666;
}
.apply_ziliao .name {
  margin-top: 30rpx;
}
.apply_ziliao input {
  text-align: right;
}
.apply_button {
  display: flex;
  justify-content: space-between;
  margin-top: 28rpx; 
}
.apply_button .queding {
  background-color: #51cbc2;
}
.apply_button button {
  width: 232rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #ffffff;
  border-radius: 10rpx;
  background-color: #6cb3f8;
}